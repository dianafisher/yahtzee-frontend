<div class="panel panel-default">
    <div class="panel-heading">Scorecard for <%= user_name %>
    <p>Turns Remaining: <%= 13 - turn_count %></p>
    <% if (!game_over) { %>
        <div class="col-lg-10 col-lg-offset-2">
            <p><a class="app-btn btn btn-sml btn-primary pull-right" href="#games/show/<%= urlsafe_key %>">Resume</a></p>
        </div>
    <% } %>
    </div>    
    <table class="table">
        <thead>
            <tr>
                <th>Category</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>ACES</td>
                <td><%= category_scores.ACES %></td>
            </tr>
            <tr>
                <td>TWOS</td>
                <td><%= category_scores.TWOS %></td>
            </tr>
            <tr>
                <td>THREES</td>
                <td><%= category_scores.THREES %></td>
            </tr>
            <tr>
                <td>FOURS</td>
                <td><%= category_scores.FOURS %></td>
            </tr>
            <tr>
                <td>FIVES</td>
                <td><%= category_scores.FIVES %></td>
            </tr>
            <tr>
                <td>SIXES</td>
                <td><%= category_scores.SIXES %></td>
            </tr>
        <tbody>
    </table>
    <table class="table">
        <thead>
            <tr>
                <th>Upper Section Total</th>
                <th>Upper Section Bonus</th>                
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><%= upper_section_total %></td>
                <td><%= bonus_points %></td>
            </tr>
        </tbody>   
    </table>    
    <table class="table">
        <tbody>
            <tr>
                <td>THREE OF A KIND</td>
                <td><%= category_scores.THREE_OF_A_KIND %></td>
            </tr>
            <tr>
                <td>FOUR OF A KIND</td>
                <td><%= category_scores.FOUR_OF_A_KIND %></td>
            </tr>
            <tr>
                <td>FULL HOUSE</td>
                <td><%= category_scores.FULL_HOUSE %></td>
            </tr>
            <tr>
                <td>SMALL STRAIGHT</td>
                <td><%= category_scores.SMALL_STRAIGHT %></td>
            </tr>
            <tr>
                <td>LARGE STRAIGHT</td>
                <td><%= category_scores.LARGE_STRAIGHT %></td>
            </tr>            
            <tr>
                <td>CHANCE</td>
                <td><%= category_scores.CHANCE %></td>
            </tr>
            <tr>
                <td>YAHTZEE</td>
                <td><%= category_scores.YAHTZEE %></td>
            </tr>
        </tbody>
    </table>    
    <table class="table">
        <thead>
            <tr>
                <th>Yahtzee Bonus</th>
                <th>Final Score</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><%= yahtzee_bonus_count %></td>
                <td><%= final_score %></td>
            </tr>
        </tbody>   
    </table>    
</div>

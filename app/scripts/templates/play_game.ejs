
<div class="col-lg-7">
    <div class="dice" id="die-one"></div>
    <div class="dice" id="die-two"></div>
    <div class="dice" id="die-three"></div>
    <div class="dice" id="die-four"></div>
    <div class="dice" id="die-five"></div>   
    <ul class="roll-result">            
            
    </ul> 
    <p>
    <div>
        <button id="roll-dice" type="button" class="btn btn-default">Roll Dice</button>
    </div>
    </p>
</div>
<div class="col-lg-5 scorecard">
    <table class="table">
        <thead>
            <tr>
                <th>Category</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>ACES</td>
                <td><%= category_scores.ACES %></td>
            </tr>
            <tr>
                <td>TWOS</td>
                <td><%= category_scores.TWOS %></td>
            </tr>
            <tr>
                <td>THREES</td>
                <td><%= category_scores.THREES %></td>
            </tr>
            <tr>
                <td>FOURS</td>
                <td><%= category_scores.FOURS %></td>
            </tr>
            <tr>
                <td>FIVES</td>
                <td><%= category_scores.FIVES %></td>
            </tr>
            <tr>
                <td>SIXES</td>
                <td><%= category_scores.SIXES %></td>
            </tr>
            <tr class="well">
                <td>Upper Section Total</td>
                <td><%= upper_section_total %></td>
            </tr>
            <tr class="well">
                <td>Upper Section Bonus</td>
                <td><%= bonus_points %></td>
            </tr>
            <tr>
                <td>THREE OF A KIND</td>
                <td><%= category_scores.THREE_OF_A_KIND %></td>
            </tr>
            <tr>
                <td>FOUR OF A KIND</td>
                <td><%= category_scores.FOUR_OF_A_KIND %></td>
            </tr>
            <tr>
                <td>FULL HOUSE</td>
                <td><%= category_scores.FULL_HOUSE %></td>
            </tr>
            <tr>
                <td>SMALL STRAIGHT</td>
                <td><%= category_scores.SMALL_STRAIGHT %></td>
            </tr>
            <tr>
                <td>LARGE STRAIGHT</td>
                <td><%= category_scores.LARGE_STRAIGHT %></td>
            </tr>            
            <tr>
                <td>CHANCE</td>
                <td><%= category_scores.CHANCE %></td>
            </tr>
            <tr>
                <td>YAHTZEE</td>
                <td><%= category_scores.YAHTZEE %></td>
            </tr>
            <tr>
                <td>YAHTZEE Bonus</td>
                <td><%= yahtzee_bonus_count * 100 %></td>
            </tr>
            <tr class="well">
                <td>TOTAL SCORE</td>
                <td><%= final_score %></td>
            </tr>
        <tbody>
    </table>        
</div>


